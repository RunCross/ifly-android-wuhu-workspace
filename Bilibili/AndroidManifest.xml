<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.runcross.bilibili"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bili_app_icon"
        android:label="@string/app_name"
        android:theme="@style/notitle" >
        <activity
            android:name="com.runcross.bilibili.MainActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".UserInfoActivity"></activity>
        <activity 
            android:name=".TypeListActivity"></activity>
        <activity 
            android:name=".usinfo.UserCollection"></activity>
    </application>

</manifest>
