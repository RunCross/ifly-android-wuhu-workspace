<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"   
    android:id="@+id/title" >
 <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="100px"
      android:orientation="horizontal"
      
      >
    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" 
        android:orientation="horizontal"
        >
    <ImageView 
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/bili_titlebar_app_title"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    <ImageView 
        android:id="@+id/title_left_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/bili_titlebar_back_button"
        android:scaleType="centerInside"
        android:layout_marginRight="0px"
        />
    <ImageView 
        android:id="@+id/title_left_app"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/bili_app_icon"
        android:scaleType="centerInside"
        />
    </LinearLayout>
<EditText 
    android:id="@+id/edSearch"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textSize="24sp"
    android:hint="@string/search"
    android:layout_marginRight="40dp"
    android:layout_toRightOf="@id/left"
    android:singleLine="true"
    />
    
    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentRight="true" 
        android:orientation="horizontal">
    
        <ImageView 
        android:id="@+id/title_right_search"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/bili_titlebar_search_button"
        android:scaleType="centerInside"
        android:layout_marginRight="0px"
        
        />
    <ImageView 
        android:id="@+id/title_right_app"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/bili_title_search_go"
        android:scaleType="centerInside"
        android:visibility="gone"
        />
    </LinearLayout>
    </RelativeLayout>
</merge>