<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/beijing15" 
   >
       
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="今日工作"
            android:textSize="15sp"/>
         
   
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_cell"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">
        <EditText
            android:id="@+id/child_todaywork"
            android:layout_width="match_parent"
            android:inputType="none|textMultiLine"
            
            android:layout_height="wrap_content"
            android:text="@string/test_todaywork"
            android:background="@null"
            android:textSize="@dimen/show_date_size" />
    </ScrollView>

   
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待协调工作"
            android:textSize="15sp"
           
            />
         
 
     <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:background="@drawable/my_cell"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">
    
    <EditText
        android:id="@+id/child_needcond"
       
        android:inputType="none|textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:text="@string/needcoordwork"
        android:textSize="@dimen/show_date_size" />
    </ScrollView>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="#5533b5e5"
         android:layout_marginTop="5dip">

        <TextView
            android:id="@+id/child_receiver_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/receiver"
            android:textSize="@dimen/show_date_size" />

        <EditText
        android:id="@+id/child_receiver"
        android:inputType="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:layout_marginBottom="10dp"
        android:text="@string/needcoordinate"
        android:textSize="@dimen/show_date_size" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/expand_commit_daily"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="right"
         android:visibility="gone"
         android:layout_marginTop="5dip">

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sure_commit"
            android:text="提交"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cannel_commit"
            android:text="取消"/>
    </LinearLayout>
    
    
</LinearLayout>


 

</LinearLayout>