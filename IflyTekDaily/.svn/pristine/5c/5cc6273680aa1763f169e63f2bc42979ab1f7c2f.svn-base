<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing_main" >
    
     <LinearLayout
         android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5599cc00"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="3dp"
            android:src="@drawable/icon04"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip" />

        <TextView
            
            android:id="@+id/pager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="已发送日报"
            android:textSize="18sp"
             />
    </LinearLayout>
    
<LinearLayout
        android:id="@+id/show_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       android:layout_below="@id/linear1"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bagin_time_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="开始时间:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bagin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:text="2013-11-26"
                android:textSize="15sp" 
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/choose_bagin_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/calendar48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bagin_end_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="结束时间:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:text="2013-11-26" 
                android:textSize="15sp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/choose_end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:src="@drawable/calendar248" />
        </LinearLayout>
    </LinearLayout>

<ExpandableListView
    android:id="@+id/expand_sended_daily"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/show_time_layout" >
</ExpandableListView>

</RelativeLayout>