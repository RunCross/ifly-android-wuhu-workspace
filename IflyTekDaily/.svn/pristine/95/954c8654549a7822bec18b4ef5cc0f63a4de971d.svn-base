<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/personactivity_takephoto_icon_bg"    
     >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/talk_to_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free_for_job"
            android:layout_margin="8dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="今日工作"
            android:textSize="18sp" 
            android:layout_weight="1"           
            />
         <ImageButton
               android:id="@+id/voiceButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               
               android:text="取消"
               android:textSize="20sp"
               android:layout_marginRight="10dp"
               android:background="@drawable/favorites_voice_icon_1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical"
        android:layout_weight="1">
     <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/my_cell"
        android:layout_weight="3"
        android:layout_margin="3dp"
        >

    <EditText
        android:id="@+id/todayJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:maxLines="20"
        android:background="@null"
        android:singleLine="false"/>

     </ScrollView>
     <TextView 
         android:id="@+id/textCount1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:text="0/500"
         android:layout_gravity="right"
         android:layout_marginRight="5dp"
         />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
         <ImageView 
             android:id="@+id/talk_write_needcood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book01"
            android:layout_margin="8dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待协调工作"
            android:textSize="18sp"
           android:layout_weight="1"
            />
         <ImageButton
               android:id="@+id/voiceButton2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               
               android:text="取消"
               android:textSize="20sp"
               android:layout_marginRight="10dp"
               android:background="@drawable/favorites_voice_icon_1"/>
    </LinearLayout>
    <!-- android:background="#5599cc00" -->
     <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/my_cell"
        android:layout_weight="3"
        android:layout_margin="3dp"
        >

    <EditText
        android:id="@+id/needCoordinate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:maxLines="5"
        android:gravity="top"
       />
    </ScrollView>
    <TextView 
         android:id="@+id/textCount2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:text="0/500"
         android:layout_gravity="right"
         android:layout_marginRight="5dp"
         />
    </LinearLayout>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="#66aa66cc">
           <TextView
            android:id="@+id/receiveNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收人：柴意、阮广杰"
            android:textSize="18sp"
            
            android:layout_marginLeft="5dp"
            />
     </LinearLayout>
      <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
        >
           <View
               android:layout_width="0dp"
               android:layout_height="0dp" 
               android:layout_weight="1"/>
           <Button
               android:id="@+id/confirmBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:minHeight="0dp"
               android:minWidth="0dp"
               android:text="确定"
               android:textSize="20sp"
               android:layout_margin="6dp"
               android:background="@drawable/btn_small_hover"/>
           <Button
               android:id="@+id/cancelBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:minHeight="0dp"
               android:minWidth="0dp"
               android:text="取消"
               android:textSize="20sp"
               android:layout_margin="6dp"
               android:background="@drawable/btn_small_hover"/>
      </LinearLayout>
     
</LinearLayout>
