        android:id="@+id/show_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_above="@+id/navigation_radioGroup"
         > -->

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager11"
             android:layout_above="@+id/navigation_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
         </android.support.v4.view.ViewPager> 

   <!--  </FrameLayout> -->

</RelativeLayout>