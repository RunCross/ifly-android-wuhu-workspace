<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/beijing15" 
   >
       
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:text="今日工作"
            android:textSize="15sp"/>
         
   
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginTop="5dp"
        android:background="@drawable/my_cell"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">
        <TextView
            android:id="@+id/child_todaywork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_todaywork"
            android:textSize="@dimen/show_date_size" />
    </ScrollView>

   
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待协调工作"
            android:textSize="15sp"
           
            />
         
 
     <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
         android:layout_weight="1"
        android:background="@drawable/my_cell"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">
    
    <TextView
        android:id="@+id/child_needcond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/needcoordwork"
        android:textSize="@dimen/show_date_size" />
    </ScrollView>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="#5533b5e5"
         android:layout_marginTop="5dip">

        <TextView
            android:id="@+id/child_receiver_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/receiver"
            android:textSize="@dimen/show_date_size" />

        <TextView
        android:id="@+id/child_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/needcoordinate"
        android:textSize="@dimen/show_date_size" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>