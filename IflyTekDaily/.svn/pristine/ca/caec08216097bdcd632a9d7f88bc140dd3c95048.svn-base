<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/menu_width"
    android:layout_height="@dimen/menu_hight"
    android:background="#999999"
    android:collapseColumns="3"
    android:stretchColumns="0,1,2" >

    <TableRow
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/menu_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/key1"
            android:text="@string/menu_chang_pass" />

        <TextView
            android:id="@+id/menu_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/personal"
            android:text="@string/menu_chang_receiver" />

        <TextView
            android:id="@+id/menu_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/about"
            android:text="@string/menu_about" />
    </TableRow>

    <TableRow
        android:layout_width="@dimen/menu_width"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/menu_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/email_menu"
            android:text="@string/menu_email" />
        <TextView
            android:id="@+id/menu_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/contacts"
            android:text="@string/menu_contact" />
        <TextView
            android:id="@+id/menu_timeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/clock"
            android:text="@string/menu_timeTask" />
    </TableRow>

</TableLayout>