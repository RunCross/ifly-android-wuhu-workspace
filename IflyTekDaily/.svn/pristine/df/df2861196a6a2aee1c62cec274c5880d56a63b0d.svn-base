<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".YiDailyMainActivity" 
    android:background="@drawable/personactivity_takephoto_icon_bg">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发小组: "
        android:textColor="#fff"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt1"
        android:layout_toRightOf="@+id/txt1"
        android:text="Team No.1"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组成员: "
        android:textColor="#fff"
        android:layout_alignLeft="@+id/txt1"
        android:layout_below="@+id/txt1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt3"
        android:layout_toRightOf="@+id/txt3"
        android:text="阮广杰  王爱爱  "
        android:textColor="#fff"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt4"
        android:layout_below="@+id/txt4"
        android:text="柴意意  陶辉辉"
        android:textColor="#fff"
        android:textSize="15sp" />
    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发时间: "
        android:textColor="#fff"
        android:layout_toLeftOf="@+id/txt6"
        android:layout_alignBottom="@+id/txt6"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt5"
        android:layout_below="@+id/txt5"
        android:text="2013-11-28"
        android:textColor="#fff"
        android:textSize="15sp" />
</RelativeLayout>

