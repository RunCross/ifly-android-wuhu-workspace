<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_show_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_panel"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6495ED"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:src="@drawable/user_male_white_blue_black" />

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="欢迎您："
                android:textColor="#ffffff" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/show_today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="2013/11/20"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.1dp"
        android:background="@drawable/bg_microblog_title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#116495ED"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/friend_1" />

            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="你今天还未填日报哦！点击这里填写"
                android:textColor="#6495ED" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/lastMouthBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/left_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2013-11-26"
            android:textColor="#6495ED"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/nextMouthBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/right_2" />
        </LinearLayout>
    </LinearLayout>

    <com.firstgroup.iflytekstudaily.work.CalendarView
        android:id="@+id/myGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_menu_bg"
       android:gravity="center_vertical"
        android:orientation="horizontal" >
        <Button 
            android:layout_width="15dp"
            android:layout_height="15dp"
           
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="#ff0000"
            android:textSize="8sp"
            android:textColor="#ff0000"
            android:layout_marginLeft="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6495ED"
            android:textSize="13sp"
            android:text="未填写"/>
        
         <Button 
            android:layout_width="15dp"
            android:layout_height="15dp"
           
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="#00ff00"
            android:textSize="8sp"
            android:textColor="#00ff00"
            android:layout_marginLeft="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6495ED"
            android:textSize="13sp"
            android:text="补填"/>
        <Button 
            android:layout_width="15dp"
            android:layout_height="15dp"
           
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="#6495ED"
            android:textSize="8sp"
            android:textColor="#33B5E5"
            android:layout_marginLeft="5dp"
           />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6495ED"
            android:textSize="13sp"
            android:text="按时填写"/>
         <Button 
            android:layout_width="15dp"
            android:layout_height="15dp"
           
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="#806495ff"
            android:textSize="8sp"
            android:textColor="#33B5E5"
            android:layout_marginLeft="5dp"
           />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6495ED"
            android:textSize="13sp"
            android:text="没日报"/>
         <Button 
            android:layout_width="15dp"
            android:layout_height="15dp"
           
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="#33B5E5"
            android:textSize="8sp"
            android:textColor="#33B5E5"
            android:layout_marginLeft="5dp"
           />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6495ED"
            android:textSize="13sp"
            android:text="今日"/>
        
    </LinearLayout>

</LinearLayout>