<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
        <TextView
            style="@style/userinfoText"
            android:layout_weight="1"
            android:text="@string/playName" />

        <TextView
            style="@style/userinfoText"
            android:id="@+id/playerName"
            android:layout_weight="1"
            android:text=""
             />

        <TextView
            style="@style/userinfoText"
            android:layout_weight="1"
            android:text="@string/playLevel"
            />

        <TextView
            android:id="@+id/playerLevel"
            android:layout_weight="1"
            style="@style/userinfoText"
            />
        
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/userinfoText"
            android:layout_weight="1"
            android:text="@string/maxbc"
             />

        <TextView
            style="@style/userinfoText"
            android:id="@+id/maxbc"
            android:layout_weight="1"
            android:text=""
            />

        <TextView
            style="@style/userinfoText"
            android:layout_weight="1"
            android:text="@string/currentbc"
            />

        <TextView
            android:id="@+id/bc"
            android:layout_weight="1"
            style="@style/userinfoText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/userinfoText"
            android:layout_weight="1"
            android:text="@string/maxap"
            />

        <TextView
            android:id="@+id/maxap"
            style="@style/userinfoText"
            android:layout_weight="1"
            />


        <TextView
            android:layout_weight="1"
            style="@style/userinfoText"
            android:text="@string/currentap"
            />

        <TextView
            android:id="@+id/ap"
            style="@style/userinfoText"
            android:layout_weight="1"
             />
    </LinearLayout>

</LinearLayout>