<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/list_chk"
        style="@style/list_text"
        android:focusable="false" />

    <TextView
        android:id="@+id/list_stu_name"
        style="@style/list_text"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/list_stu_sex"
        style="@style/list_text"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/list_stu_tel"
        style="@style/list_text"
        android:layout_weight="2" />

    <ImageButton
        android:id="@+id/list_stu_gotel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/phone"
        android:contentDescription="@string/go_mess"
        android:focusable="false"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/list_stu_gomess"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/message"
        android:contentDescription="@string/go_mess"
        android:focusable="false"
        android:visibility="visible" />

</LinearLayout>